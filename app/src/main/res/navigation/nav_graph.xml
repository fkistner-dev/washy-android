    <fragment
        android:id="@+id/testerFragment"
        android:name="com.kilomobi.washy.fragment.RepositoryTesterFragment"
        android:label="TEST"
        tools:layout="@layout/layout_tester_repository">
        <action
            android:id="@+id/action_term_of_service_fragment_to_second_fragment"
            app:destination="@id/termOfServiceFragment" />
    </fragment>
    <fragment
        android:id="@+id/termOfServiceFragment"
        android:name="com.kilomobi.washy.fragment.TermOfServiceFragment"
        android:label=""
        tools:layout="@layout/activity_visit_tos_layout">
        <action
            android:id="@+id/action_term_of_service_fragment_to_second_fragment"
            app:destination="@id/termOfServiceFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.kilomobi.washy.fragment.HomeFragment"
        android:label=""
        tools:layout="@layout/layout_home">

        <action
            android:id="@+id/action_homeFragment_to_mapFragment"
            app:destination="@id/mapFragment" />

        <action
            android:id="@+id/action_homeFragment_to_feedFragment"
            app:destination="@id/feedListFragment" />

        <action
            android:id="@+id/action_homeFragment_to_favoriteFragment"
            app:destination="@id/favoriteFragment" />

        <action
            android:id="@+id/action_merchantListFragment_to_merchantDetailFragment"
            app:destination="@id/merchantDetailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <argument
            android:name="merchant"
            app:argType="com.kilomobi.washy.model.Merchant"
            android:defaultValue="@null"/>
    </fragment>

    <fragment
        android:id="@+id/mapFragment"
