    <fragment
        android:id="@+id/identificationFragment"
        android:name="com.kilomobi.washy.fragment.IdentificationFragment"
        android:label="IdentificationFragment"
        tools:layout="@layout/activity_firebase_ui">
        <action
            android:id="@+id/action_identification_fragment_to_map_fragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <navigation
        android:id="@+id/nav_intro"
        app:startDestination="@id/introActivity" >
        <activity
            android:id="@+id/introActivity"
            android:name="com.kilomobi.washy.activity.IntroActivity"
            android:label="IntroActivity" />
        <action
            android:id="@+id/action_intro_activity_to_map_fragment"
            app:destination="@id/homeFragment" />
    </navigation>

    <action
        android:id="@+id/action_global_mapFragment"
        app:destination="@id/homeFragment" />
    <action
        android:id="@+id/action_global_identificationFragment"
        app:destination="@id/identificationFragment" />
