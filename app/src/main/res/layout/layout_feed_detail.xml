<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:scaleType="fitStart" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/item_rl">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circle_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:visibility="visible"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="0.5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/circle_image"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/top_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-3dp"
                        style="@style/WashyText.Default.Bold.Contrast" />

                    <TextView
                        android:id="@+id/top_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-3dp"
                        android:layout_below="@id/title"
                        android:textColor="@color/white"
                        style="@style/WashyText.Small.Contrast" />

                </LinearLayout>
            </RelativeLayout>


            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_share"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/image_margin"
                android:layout_marginTop="@dimen/image_margin"
                android:layout_marginEnd="@dimen/image_margin"
                android:layout_marginBottom="@dimen/image_margin"
                android:src="?attr/actionModeShareDrawable"
                android:background="@color/transparent"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/title"
                style="@style/WashyText.Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image"
                android:layout_marginStart="@dimen/image_margin"
                android:layout_marginTop="@dimen/image_margin"
                android:layout_marginEnd="@dimen/image_margin"
                android:layout_marginBottom="@dimen/image_margin"
                android:text="@string/lorem_schnapsum" />

            <TextView
                android:id="@+id/text"
                style="@style/WashyText.Default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginStart="@dimen/image_margin"
                android:layout_marginEnd="@dimen/image_margin"
                android:layout_marginBottom="60dp"
                android:text="@string/lorem_schnapsum_big" />

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview_footer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardBackgroundColor="@color/accent"
        app:cardCornerRadius="6dp"
        android:layout_alignParentBottom="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/footer_text"
                style="@style/WashyText.Default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/image_margin"
                android:layout_marginEnd="@dimen/image_margin"
                android:layout_marginBottom="@dimen/image_margin"
                android:layout_toLeftOf="@+id/footer_button"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@id/footer_button"
                style="@style/WashyText.Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/image_margin"
                android:layout_marginEnd="@dimen/image_margin"
                android:layout_marginBottom="@dimen/image_margin"
                android:text="@string/call_to_action_feed" />

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>