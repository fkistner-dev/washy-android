<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    android:gravity="bottom"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/AppTheme.AppBarOverlay">

  <FrameLayout
      android:id="@+id/profileFrame"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_alignParentStart="true">

    <ImageView
        android:id="@+id/profilePic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_face_profile"
        android:tint="@color/white"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:id="@+id/profileShape"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/app_name"
        android:src="@drawable/profile_circle_shape"/>
  </FrameLayout>

  <TextView
      android:id="@+id/profileText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toEndOf="@id/profileFrame"
      android:layout_alignParentBottom="true"
      android:layout_marginStart="@dimen/text_marging_profil_header"
      android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

  <ImageView
      android:id="@+id/washy"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:contentDescription="@string/app_name"
      android:paddingTop="@dimen/nav_header_vertical_spacing"
      app:srcCompat="@drawable/ic_launcher_foreground"
      tools:visibility="gone"/>

</RelativeLayout>
