<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        app:cardCornerRadius="2dp"
        app:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/like"
                style="@style/WashyText.CardView.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/badge"
                style="@style/WashyText.CardView.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                tools:text="@string/merchant_pro" />

            <TextView
                android:id="@+id/header"
                style="@style/WashyText.CardView.Header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/badge"
                tools:text="@string/merchant_pro" />

            <TextView
                android:id="@+id/subheader"
                style="@style/WashyText.CardView.SubHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/header"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/badge"
                tools:text="@string/mockup_data_title_jl_lavage" />

            <TextView
                android:id="@+id/text"
                style="@style/WashyText.CardView.Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/subheader" />

            <TextView
                android:id="@+id/subtext"
                style="@style/WashyText.CardView.Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/text" />

            <TextView
                android:id="@+id/date"
                style="@style/WashyText.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/text" />

            <Button
                android:id="@+id/call_to_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                tools:text="@string/action_add_rating"/>

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>